<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- Create a bean -->
	<bean id="practice" class="com.practice.Practice">		<!-- HelloWorld hello = new HelloWorld -->
		<property name="id" value="1" />	<!-- Invokes setter methods of the class to inject the value -->
		<property name="name" value="Rushi" />
		<property name="mks_csc" value="80" />
		<property name="mks_ph" value="70" />
		
	</bean>

</beans>